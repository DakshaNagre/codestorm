stage('Redeploy Kubernetes') {
          sh '''
          ssh -i ~/key.pem ubuntu@149.165.170.97  " rm -rf ~/codestorm &&
          git clone --single-branch --branch dockerize-flask-node https://github.com/airavata-courses/codestorm.git &&
          cd ~/Kubernetes &&
          kubectl delete service weather-app &&
          kubectl delete service weather-app-frontend &&
          kubectl delete deployment weather-app &&
          kubectl delete deployment weather-app-frontend &&
          kubectl apply -f kubernetes_production.yaml "
          '''
}
